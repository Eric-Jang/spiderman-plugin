<?xml version="1.0" encoding="UTF-8"?>

<beans>
  <eweb4j>
    <reload>0</reload>
    <debug>1</debug>
    <locales>
      <locale language="zh" country="CN"/>
    </locales>
    <properties>
      <file path="spiderman.properties" global="1"/>
    </properties>
    <ioc>
      <open>1</open>
      <logs>
        <log console="0" level="info" file="logs/logs.log" size="5"/>
      </logs>
      <iocXmlFiles>
      	<path>spiderman-ioc.xml</path>
      </iocXmlFiles>
    </ioc>
    <orm>
      <open>0</open>
      <logs>
        <log console="0" level="info" file="logs/logs.log" size="5"/>
      </logs>
      <ddl generate="true" run="false" ds="myDBInfo"/>
      <dataSource>com.mchange.v2.c3p0.ComboPooledDataSource</dataSource>
      <scanPojoPackage>
      	<path>AP:${RootPath}/target/classes</path>
      	<path>.</path>
      </scanPojoPackage>
      <ormXmlFiles>
        <path></path>
      </ormXmlFiles>
      <dbInfoXmlFiles>
        <path></path>
      </dbInfoXmlFiles>
    </orm>
    <mvc>
      <open>0</open>
      <logs>
        <log console="0" level="info" file="logs/logs.log" size="5"/>
      </logs>
      <upload tmp="${RootPath}/WEB-INF/tmp" maxMemorySize="4M" maxRequestSize="4M"/>
      <scanActionPackage>
        <path>AP:${RootPath}/target/classes</path>
        <path>.</path>
      </scanActionPackage>
      <scanInterceptorPackage>
        <path>AP:${RootPath}/target/classes</path>
        <path>.</path>
      </scanInterceptorPackage>
      <actionXmlFiles>
        <path></path>
      </actionXmlFiles>
      <interXmlFiles>
        <path></path>
      </interXmlFiles>
    </mvc>
  </eweb4j>
</beans>
